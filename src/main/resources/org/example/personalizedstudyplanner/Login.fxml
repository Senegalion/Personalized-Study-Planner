<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="457.0" prefWidth="870.0" styleClass="anchor-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.personalizedstudyplanner.controllers.LoginController">
    <Label alignment="CENTER" layoutX="200.0" layoutY="30.0" prefWidth="400" styleClass="title" text="Welcome to Study Planner" textAlignment="CENTER" textFill="#e8e6e6">
      <font>
         <Font name="Arial Bold" size="30.0" />
      </font></Label>

    <Label layoutX="300" layoutY="120" styleClass="label" text="Email:">
      <font>
         <Font name="Arial" size="18.0" />
      </font></Label>
    <TextField fx:id="emailField" layoutX="300" layoutY="150" prefWidth="200" styleClass="text-field" />

    <Label layoutX="300.0" layoutY="212.0" styleClass="label" text="Password:">
      <font>
         <Font name="Arial" size="18.0" />
      </font></Label>
    <PasswordField fx:id="passwordField" layoutX="300.0" layoutY="242.0" prefWidth="200" styleClass="password-field" />

    <Button layoutX="300.0" layoutY="300.0" onAction="#handleLogin" styleClass="button" text="Login" />
    <Button layoutX="398.0" layoutY="300.0" onAction="#goToRegistration" styleClass="button" text="Register" />
</AnchorPane>
