<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.personalizedstudyplanner.controllers.SelectPlannerController"
      stylesheets="@style.css" styleClass="root-pane">

    <Label text="Select Your Existing Study Planner" styleClass="title"/>

    <ListView fx:id="plannerListView" prefWidth="300" prefHeight="200" styleClass="list-view"/>

    <HBox spacing="10">
        <Button text="Select" onAction="#handleSelectPlanner" styleClass="primary-button"/>
        <Button text="Delete" onAction="#handleDeletePlanner" styleClass="danger-button"/>
        <Button text="Back" onAction="#goBack" styleClass="secondary-button"/>
    </HBox>

</VBox>
