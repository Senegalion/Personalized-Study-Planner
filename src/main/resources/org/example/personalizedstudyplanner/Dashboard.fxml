<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.personalizedstudyplanner.controllers.DashboardController"
      stylesheets="@style.css" styleClass="root-pane">

    <Label text="Study Planner Dashboard" styleClass="title"/>

    <VBox spacing="10">
        <Button text="Create New Planner" onAction="#handleCreatePlanner" styleClass="primary-button"/>
        <Button text="View Existing Planners" onAction="#handleSelectPlanner" styleClass="primary-button"/>
        <Button text="Logout" onAction="#handleLogout" styleClass="danger-button"/>
    </VBox>

</VBox>
