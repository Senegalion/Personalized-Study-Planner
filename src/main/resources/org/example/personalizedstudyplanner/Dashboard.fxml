<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" styleClass="root-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.personalizedstudyplanner.controllers.DashboardController">

    <Label styleClass="title" text="Study Planner Dashboard" />

    <VBox alignment="TOP_CENTER" spacing="10">
        <Button onAction="#handleCreatePlanner" styleClass="primary-button" text="Create New Planner" />
        <Button onAction="#handleSelectPlanner" styleClass="primary-button" text="View Existing Planners" />
        <Button onAction="#handleLogout" styleClass="danger-button" text="Logout" />
    </VBox>

</VBox>
